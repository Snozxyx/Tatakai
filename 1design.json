{
  "name": "Tatakai Design System",
  "version": "1.0.0",
  "description": "Design tokens for Tatakai webOS TV app",
  "tokens": {
    "colors": {
      "background": "#000000",
      "text": "#FFFFFF",
      "textSecondary": "#B0B0B0",
      "textMuted": "#808080",
      "accent": "#8A2BE2",
      "accentHover": "#7B2BCB",
      "accentLight": "#9A3BF2",
      "card": "#1A1A1A",
      "cardActive": "#8A2BE2",
      "cardHover": "#2A2A2A",
      "icon": "#B0B0B0",
      "iconActive": "#8A2BE2",
      "border": "#333333",
      "borderActive": "#8A2BE2",
      "success": "#22C55E",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "spacing": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "96px"
    },
    "typography": {
      "fontFamily": {
        "sans": ["Inter", "system-ui", "sans-serif"],
        "mono": ["JetBrains Mono", "monospace"]
      },
      "fontSize": {
        "xs": "12px",
        "sm": "14px",
        "base": "16px",
        "lg": "18px",
        "xl": "20px",
        "2xl": "24px",
        "3xl": "32px",
        "4xl": "48px",
        "5xl": "64px"
      },
      "fontWeight": {
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700"
      },
      "lineHeight": {
        "tight": "1.2",
        "normal": "1.5",
        "relaxed": "1.75"
      }
    },
    "borderRadius": {
      "none": "0",
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.3)",
      "md": "0 4px 12px rgba(0, 0, 0, 0.6)",
      "lg": "0 8px 24px rgba(0, 0, 0, 0.8)",
      "xl": "0 12px 32px rgba(0, 0, 0, 0.9)"
    },
    "motion": {
      "duration": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms"
      },
      "easing": {
        "ease": "cubic-bezier(0.4, 0, 0.2, 1)",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "layout": {
      "sideNavigation": {
        "width": "60px",
        "expandedWidth": "240px"
      },
      "focus": {
        "ringWidth": "2px",
        "ringColor": "#8A2BE2",
        "ringOffset": "2px"
      },
      "grid": {
        "posterAspectRatio": "2/3",
        "bannerAspectRatio": "16/9",
        "gaps": {
          "sm": "8px",
          "md": "16px",
          "lg": "24px"
        }
      }
    },
    "breakpoints": {
      "tv1080": "1920px",
      "tv720": "1280px",
      "tablet": "768px",
      "mobile": "480px"
    }
  },
  "components": {
    "button": {
      "primary": {
        "backgroundColor": "#8A2BE2",
        "color": "#FFFFFF",
        "borderRadius": "8px",
        "padding": "12px 24px"
      },
      "secondary": {
        "backgroundColor": "#1A1A1A",
        "color": "#FFFFFF",
        "borderRadius": "8px",
        "padding": "12px 24px",
        "border": "1px solid #333333"
      }
    },
    "card": {
      "default": {
        "backgroundColor": "#1A1A1A",
        "borderRadius": "8px",
        "boxShadow": "0 4px 12px rgba(0, 0, 0, 0.6)",
        "border": "1px solid #333333"
      },
      "focused": {
        "backgroundColor": "#2A2A2A",
        "borderColor": "#8A2BE2",
        "boxShadow": "0 0 0 2px #8A2BE2"
      }
    },
    "navigation": {
      "item": {
        "default": {
          "color": "#B0B0B0",
          "backgroundColor": "transparent"
        },
        "active": {
          "color": "#8A2BE2",
          "backgroundColor": "rgba(138, 43, 226, 0.1)"
        },
        "focused": {
          "backgroundColor": "rgba(138, 43, 226, 0.2)",
          "outline": "2px solid #8A2BE2"
        }
      }
    }
  }
}