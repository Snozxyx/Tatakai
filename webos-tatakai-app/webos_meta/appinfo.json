{
  "id": "com.tatakai.webos",
  "version": "1.0.0",
  "vendor": "Tatakai Team",
  "type": "web",
  "main": "index.html",
  "title": "Tatakai - Anime Streaming",
  "subtitle": "Modern Anime Streaming for WebOS TV",
  "icon": "icon.png",
  "largeIcon": "large_icon.png",
  "splashBackground": "splash_background.png",
  "transparency": true,
  "resolution": "1920x1080",
  "disableBackHistoryAPI": true,
  "enableOfflineMode": false,
  "requiredPermissions": [
    "internet",
    "video.playback",
    "media.operation"
  ],
  "optionalPermissions": [
    "storage.operation"
  ],
  "webOSTV": {
    "supportDynamicRendering": true,
    "deviceCompatibility": ["webOSTV6.0", "webOSTV22", "webOSTV23"],
    "minVersion": "6.0.0",
    "accessibility": {
      "supportsAudioGuidance": false,
      "supportsHighContrast": false
    },
    "mediaCapability": {
      "video": ["h264", "h265", "vp9", "av1"],
      "audio": ["aac", "mp3", "dolby_digital"],
      "streaming": ["hls", "dash"]
    }
  }
}